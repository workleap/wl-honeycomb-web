{
    "name": "wl-honeycomb-web",
    "author": "Workleap",
    "description": "Shared Honeycomb configuration for web application at Workleap.",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "dev-api-key": "turbo run dev --filter=./samples/api-key/**",
        "dev-proxy": "turbo run dev --filter=./samples/proxy/**",
        "dev-docs": "retype start",
        "build-lib": "turbo run build --filter=./lib",
        "build-api-key": "turbo run build --filter=./samples/api-key/**",
        "build-proxy": "turbo run build --filter=./samples/proxy/**",
        "serve-api-key": "turbo run serve-build --filter=./samples/api-key/**",
        "serve-proxy": "turbo run serve-build --filter=./samples/proxy/**",
        "lint": "turbo run lint --continue",
        "eslint": "eslint . --ignore-pattern lib --ignore-pattern samples --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "syncpack": "syncpack lint",
        "knip": "knip --cache --cache-location ./node_modules/.cache/knip",
        "test": "turbo run test --continue",
        "changeset": "changeset",
        "publish-lib": "changeset publish",
        "publish-pr-lib": "pkg-pr-new publish ./lib --packageManager=pnpm --pnpm",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist .turbo .rslib node_modules/.cache",
        "reset": "pnpm clean && pnpm reset:modules",
        "reset:modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "list-outdated-deps": "pnpm outdated -r --format list !eslint !typescript",
        "update-outdated-deps": "pnpm update -r --latest !eslint !typescript"
    },
    "devDependencies": {
        "@changesets/changelog-github": "0.5.0",
        "@changesets/cli": "2.27.11",
        "@types/node": "22.10.7",
        "@typescript-eslint/parser": "8.20.0",
        "@workleap/eslint-plugin": "3.2.6",
        "@workleap/typescript-configs": "3.0.2",
        "eslint": "8.57.0",
        "installed-check": "9.3.0",
        "knip": "5.42.2",
        "pkg-pr-new": "0.0.39",
        "retypeapp": "3.6.0",
        "syncpack": "13.0.0",
        "turbo": "2.3.3",
        "typescript": "5.5.4"
    },
    "engines": {
        "node": ">=22.0.0",
        "pnpm": ">=9"
    },
    "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
